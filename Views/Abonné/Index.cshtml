@model IEnumerable<biblio.Models.Abonné>

@{
    ViewData["Title"] = "Index";
}

<h5>Listes des Abonnes</h5>

<p>
    <a asp-action="Create" class="btn btn-success">
        <i class="fas fa-plus">Add new Abonne</i>
    </a>
</p>
<table class="table">
    <thead>
        <tr>
            <th>
                @Html.DisplayNameFor(model => model.Nom)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Prénom)
            </th>
            <th>
                Action
            </th>
            <th>
                Livre Empruntes
            </th>
        </tr>
    </thead>
    <tbody>
        @foreach (var item in Model)
        {
            <tr>
                <td>
                    @Html.DisplayFor(modelItem => item.Nom)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.Prénom)
                </td>
                <td>

                    <a asp-action="Edit" asp-route-id="@item.Id" class="btn btn-primary"><i class="fas fa-edit">Edit</i></a>
                    <a asp-action="Details" asp-route-id="@item.Id" class="btn btn-secondary"><i class="fa fa-info-circle">Details</i></a>
                    <a asp-action="Delete" asp-route-id="@item.Id" class="btn btn-danger"><i class="fa fa-trash">Delete</i></a>

                </td>
                <td>

                    <a asp-action="LivreEmprunte" asp-route-subscriberId="@item.Id" class="btn btn-outline-dark" ><i class="fa fa-book">Voir Livres Empruntés</i></a>
                </td>
            </tr>
        }
    </tbody>
</table>
